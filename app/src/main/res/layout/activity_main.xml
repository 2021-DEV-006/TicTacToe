<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/blue_grey"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/game_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:id="@+id/row_1_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:weightSum="3">

            <Button
                android:id="@+id/btnCell1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:textSize="@dimen/btn_text_size"
                android:background="@color/purple_500"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/btnCell2"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@color/purple_500"
                android:textSize="@dimen/btn_text_size"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/btnCell3"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:textSize="@dimen/btn_text_size"
                android:background="@color/purple_500"
                style="?android:attr/borderlessButtonStyle"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_2_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_1_layout"
            android:layout_margin="5dp"
            android:weightSum="3">

            <Button
                android:id="@+id/btnCell4"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:textSize="@dimen/btn_text_size"
                android:background="@color/purple_500"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/btnCell5"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:textSize="@dimen/btn_text_size"
                android:background="@color/purple_500"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/btnCell6"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:textSize="@dimen/btn_text_size"
                android:background="@color/purple_500"
                style="?android:attr/borderlessButtonStyle"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_3_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_2_layout"
            android:layout_margin="5dp"
            android:weightSum="3">

            <Button
                android:id="@+id/btnCell7"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:textSize="@dimen/btn_text_size"
                android:background="@color/purple_500"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/btnCell8"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:textSize="@dimen/btn_text_size"
                android:background="@color/purple_500"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/btnCell9"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:textSize="@dimen/btn_text_size"
                android:background="@color/purple_500"
                style="?android:attr/borderlessButtonStyle"/>

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:padding="15dp"
        android:background="@color/teal_700"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnRestartGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:text="@string/restart_game"
        android:layout_alignParentEnd="true"
        android:background="@color/purple_500"
        style="?android:attr/borderlessButtonStyle"/>

</RelativeLayout>